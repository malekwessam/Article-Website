@model ArticleProject.Core.Post

@{
    ViewData["Title"] = "حذف";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:Cairo">حذف</h1>

<h3>هل انت متأكد من هذا لاجراء؟</h3>
<div>
    <h4 style="font-family:Cairo">بيانات المشاركة</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostDescription)
        </dd>
        <dt class="col-sm-2">
            <img src="~/Images/@Model.BathImage" class="img-fluid" />
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BathImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSince)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvailableSince)
        </dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
