@model ArticleProject.ViewModel.PostViewModel
@inject ArticleProject.Data.IDataHelper<ArticleProject.Core.Category> datahelper
@{
    ViewData["Title"] = "تعديل";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:Cairo">تعديل</h1>

<h4 style="font-family:Cairo">بيانات المشاركة</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input asp-for="UserId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="UserName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="FullName" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PostCategory" class="control-label"></label>
                <input asp-for="PostCategory" class="form-control" />
                <span asp-validation-for="PostCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTitle" class="control-label"></label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostDescription" class="control-label"></label>
                <textarea asp-for="PostDescription" class="form-control"></textarea>
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BathImage" class="control-label"></label>
                <input asp-for="BathImage" type="file" class="form-control" />
                <span asp-validation-for="BathImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AvailableSince" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="AuthorId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="CategoryId" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">الرجوع الى المشاركات</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
